{
  "name": "fixflow",
  "displayName": "FixFlow",
  "description": "Track, manage, and resolve technical debt directly in VS Code without disrupting your workflow.",
  "version": "0.0.1",
  "publisher": "fixflow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fixflow/fixflow-vscode.git"
  },
  "keywords": [
    "technical-debt",
    "code-quality",
    "development",
    "productivity",
    "maintenance"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fixflow.createDebtEntry",
        "title": "FixFlow: Create Debt Entry",
        "category": "FixFlow"
      },
      {
        "command": "fixflow.openDebtBoard",
        "title": "FixFlow: Open Debt Board",
        "category": "FixFlow"
      },
      {
        "command": "fixflow.scanForDebt",
        "title": "FixFlow: Scan for Technical Debt",
        "category": "FixFlow"
      },
      {
        "command": "fixflow.exportReport",
        "title": "FixFlow: Export Debt Report",
        "category": "FixFlow"
      },
      {
        "command": "fixflow.resolveDebtEntry",
        "title": "FixFlow: Resolve Debt",
        "category": "FixFlow"
      },
      {
        "command": "fixflow.deleteDebtEntry",
        "title": "FixFlow: Delete Debt",
        "category": "FixFlow"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "fixflow.createDebtEntry",
          "group": "fixflow",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "fixflow.createDebtEntry"
        }
      ]
    },
    "keybindings": [
      {
        "command": "fixflow.createDebtEntry",
        "key": "ctrl+alt+d",
        "when": "editorTextFocus && !inputFocus"
      }
    ],
    "configuration": {
      "title": "FixFlow",
      "properties": {
        "fixflow.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable FixFlow extension"
        },
        "fixflow.autoScan": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan for technical debt markers"
        },
        "fixflow.debtMarkers": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["TODO", "FIXME", "HACK", "BUG", "NOTE"],
          "description": "Keywords to scan for when detecting technical debt"
        },
        "fixflow.storagePath": {
          "type": "string",
          "default": ".fixflow",
          "description": "Directory to store FixFlow data (relative to project root)"
        },
        "fixflow.notifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for debt reminders"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "fixflowDebtBoard",
          "name": "FixFlow Debt Board",
          "when": "workspaceHasFixflowData"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fixflow",
          "title": "FixFlow",
          "icon": "resources/fixflow-icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "dev": "npm run watch",
    "build": "npm run compile",
    "clean": "rimraf dist out"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "rimraf": "^5.0.5"
  }
}
