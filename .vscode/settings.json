{
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "files.exclude": {
    "**/dist": true,
    "**/out": true,
    "**/node_modules": true,
    "**/.fixflow": true
  },
  "search.exclude": {
    "**/dist": true,
    "**/out": true,
    "**/node_modules": true,
    "**/.fixflow": true
  },
  "files.associations": {
    "*.fixflow": "json"
  }
}